            "type": "image_picker",
            "label": "Profile"
          },
          {
            "id": "testimonial",
            "type": "textarea",
            "label": "Testimonial"
          },
          {
            "id": "color",
            "type": "radio",
            "label": "Color",
            "options": [
                { "value": "", "label": "Orange" },
                { "value": "blue", "label": "Blue" }
            ]
          }
        ]
      },
      {
        "type": "features-large",
        "name": "Large Features Section",
