<div data-section-id="{{ section.id }}">
  {% for block in section.blocks %}
  <div {{ block.shopify_attributes }}>
    {% case block.type %}

      {% when 'product-hero-main' %}
      {% include 'product-hero-main' %}

      {% when 'awards-bar' %}
      {% include 'awards-bar' %}

      {% when 'banner-detail' %}
      {% include 'banner-detail' %}

      {% when 'features-small' %}
      {% include 'features-small' %}

      {% when 'video-section' %}
      {% include 'video-section' %}

      {% when 'banner-testimonial' %}
      {% include 'banner-testimonial' %}

      {% when 'features-large' %}
      {% include 'features-large' %}

    {% endcase %}
  </div>
  {% endfor %}
</div>

{% schema %}
  {
    "blocks": [
      {
        "type": "product-hero-main",
        "name": "Main Product Hero",
        "settings": [
          {
            "id": "banner_image",
            "type": "image_picker",
            "label": "Hero Image"
          }
        ]
      },
      {
          "type": "awards-bar",
          "name": "Awards Bar"
      },
      {
        "type": "banner-detail",
        "name": "Detail Banner",
        "settings": [
          {
            "id": "variation",
            "type": "select",
            "label": "Decorations",
            "options": [
                {
                    "value": "variation-1",
                    "label": "Pieces"
                },
                {
                    "value": "variation-2",
                    "label": "Breadboard"
                },
                {
                    "value": "",
                    "label": "None"
                }
            ]

          },
          {
            "id": "banner_title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "banner_detail",
            "type": "textarea",
            "label": "Detail"
          },
          {
            "id": "banner_image",
            "type": "image_picker",
            "label": "Banner Image"
          },
          {
            "id": "overflow",
            "type": "radio",
            "label": "Decoration Overflow",
            "options": [
                { "value": "", "label": "Contain" },
                { "value": "overflow", "label": "Down" }
            ]

