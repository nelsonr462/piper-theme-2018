<div class="banner-detail {{ block.settings.banner-detail-color }}" data-section-id="{{ section.id }}">
    <div class="banner-container">
        <div class="banner-content">
            <div class="banner-description">
                <h1>{{ block.settings.banner_title }}</h1>
                <p>{{ block.settings.banner_detail }}</p>
            </div>
        </div>

        {% if block.settings.banner-detail-image-style == 'cover' %}
            <div class="banner-image" style="background: center top no-repeat url({{ block.settings.banner_image | img_url: '1024x' }}); background-size: {{ block.settings.banner-detail-image-style }}; ">
        {% else %}
            <div class="banner-image" style="background: center bottom no-repeat url({{ block.settings.banner_image | img_url: '1024x' }}); background-size: {{ block.settings.banner-detail-image-style }}; ">

        {% endif %}
            
        </div>
    </div>
</div>