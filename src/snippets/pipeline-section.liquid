<div class="pipeline-section"
    {% if block.settings.pipeline-section-background %}
        style="background-image: url({{ block.settings.pipeline-section-background | img_url: '1200x' }});"
    {% endif %}>
    <div class="content">
        {%- comment -%} TITLE {%- endcomment -%}
        <div class="title">
            <h2>{{ block.settings.pipeline-section-title }}</h2>
        </div>

        {% comment %} PATH CONTAINER {% endcomment %}
        <div class="path-container">
            {% comment %} NODES {% endcomment %}
            {% for i in (1..3) %}
                {% assign node-img = "pipeline-section-node-img-" | append: forloop.index %}
                {% assign node-title = "pipeline-section-node-title-" | append: forloop.index %}
                {% assign node-desc = "pipeline-section-node-desc-" | append: forloop.index %}
                <div class="path-node">
                    {% comment %} IMAGE CONTAINER {% endcomment %}
                    <div class="node-image">
                        {% comment %} ORNAMENT {% endcomment %}
                        <div class="node-step">
                            <div class="step-count">
                                {{forloop.index}}
                            </div>
                        </div>
                        {% comment %} IMAGE {% endcomment %}
                        <img src="{{ block.settings[node-img] | img_url: '500x' }}" alt="">
                    </div>

                    <div class="node-copy">
                        {% comment %} TITLE {% endcomment %}
                        <div class="node-title">
                            <h3>{{ block.settings[node-title]}}</h3>
                        </div>

                        {% comment %} DESCRIPTION {% endcomment %}
                        <div class="node-desc">
                            <p>{{ block.settings[node-desc] }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <span class="path-cap"></span>
        </div>
    </div>
</div>