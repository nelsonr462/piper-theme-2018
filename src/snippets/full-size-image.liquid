<div class="full-size-image {{ block.settings.full-size-image-color-variant }}" id="{{ block.settings.full-size-image-anchor | handleize }}">
    {% if block.settings.full-size-image-title %}
        <h1>{{ block.settings.full-size-image-title }}</h1>
    {% endif %}

    {% if block.settings.full-size-image-compress %}
    <img src="{{ block.settings.full-size-image-img | img_url: '1200x', format: 'pjpg' }}"
        style="width: {{ block.settings.full-size-image-display-size }}%"
        alt="">
    {% else %}
    <img src="{{ block.settings.full-size-image-img | img_url: '1200x' }}"
        style="width: {{ block.settings.full-size-image-display-size }}%"
        alt="">
    {% endif %}
</div>