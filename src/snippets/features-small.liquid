<div class="features-small" id="section-{{ block.settings.features-small-anchor }}">
    {% if block.settings.features-small-title != "" %}
    <h1 class="{{ block.settings.features-small-header-color }}">{{ block.settings.features-small-title }}</h1>
    {% endif %}
    <div class="content">

        {% for i in (1..3) %}
            {% assign feature-name = "features-small-subheader-" | append: forloop.index %}
            {% assign feature-img = "features-small-img-" | append: forloop.index %}
            {% assign feature-desc = "features-small-desc-" | append: forloop.index %}
            {% assign embed-code = "features-small-embed-code-" | append: forloop.index %}

            <div class="feature">
                <div class="image">
                    <img src="{{ block.settings[feature-img] | img_url: '400x' }}" />
                    {% if block.settings.features-small-is-video %}
                        <div class="action-btn"
                            data-modal-action="openVideo"
                            data-embed-code='{{ block.settings[embed-code] }}'
                            alt="">
                            {% include 'icon-playvideo' %}
                        </div>
                    {% endif %}
                </div>
                <h4>{{ block.settings[feature-name] }}</h4>
                <div class="description">{{ block.settings[feature-desc] }}</div>  
            </div>    
        {% endfor %}

    </div>

    {% if block.settings.features-small-is-video %}
        <div class="modal" id="videoModal">
            <a href="#close-modal" class="modal-overlay" aria-label="Close"></a>
            <div class="modal-container">
                
                <div class="modal-header">
                    <a href="#close-modal" class="btn btn-clear float-right" aria-label="Close"></a>
                </div>
                
                <div class="modal-body">
                    <div class="modal-content">
                        <!-- Video gets inserted here -->
                    </div>    
                </div>
                
                <div class="modal-footer">
                </div>
                
            </div>
        </div>
    {% endif %}
</div>

