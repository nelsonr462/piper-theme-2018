<div class="banner-detail" data-section-id="{{ section.id }}">
    <div class="banner-container">
        <div class="banner-content">
            <div class="banner-description {{ block.settings.variation }}">
                <h1>{{ block.settings.banner_title }}</h1>
                <p>{{ block.settings.banner_detail }}</p>
            </div>
            <div class="banner-decoration {{ block.settings.variation }}">
                
                {% if block.settings.variation == 'variation-1' %}
                    <div>
                        <img class="{{ block.settings.overflow }}" src="{{ 'demo-screwdriver.png' | asset_url }}" alt="">
                    </div>
                    
                    <div>
                        <img class="{{ block.settings.overflow }}" src="{{ 'demo-piece.png' | asset_url }}" alt="">
                    </div>
                    
                    <div>
                        <img class="{{ block.settings.overflow }}" src="{{ 'demo-button-piece.png' | asset_url }}" alt="">
                    </div>
                {% endif %}

                {% if block.settings.variation == 'variation-2' %}
                    <div>
                        <img class="{{ block.settings.overflow }}" src="{{ 'demo-breadboard.png' | asset_url }}" alt="">
                    </div>
                    <div>
                        <img class="{{ block.settings.overflow }}" src="{{ 'demo-breadboard.png' | asset_url }}" alt="">
                    </div>
                    <div>
                        <img class="{{ block.settings.overflow }}" src="{{ 'demo-breadboard.png' | asset_url }}" alt="">
                    </div>
                {% endif %}
                
                
            </div>

        </div>

        <div class="banner-image" style="background: center no-repeat url({{ block.settings.banner_image | img_url: '1024x' }}); background-size: cover; ">
            
        </div>
    </div>
</div>