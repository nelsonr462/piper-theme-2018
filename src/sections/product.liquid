            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad"
          }
        ]
      },
      {
        "type": "full-size-image",
        "name": "Full Size Image",
        "settings": [
          {
            "id": "full-size-image-anchor",
            "type": "text",
            "label": "Anchor (for hero nav links)"
          },
          {
            "id": "full-size-image-title",
            "type": "text",
            "label": "Image Title",
            "default": "What's in the box?"
          },
          {
            "id": "full-size-image-img",
            "type": "image_picker",
            "label": "Image"
          }
        ]
      },
      {
        "type": "product-info",
        "name": "Product Info",
        "settings": [
          {
            "id": "product-info-subtitle",
            "type": "text",
            "label": "Info Subtitle",
            "default": "Items"
          },
          {
            "id": "product-info-items",
            "type": "textarea",
            "label": "Item List (Comma Separated)",
            "default": "Item 1, Item 2, Item 3"
          }
        ]
      },
      {
        "type": "expandable-section",
        "name": "Expandable Section",
        "settings": [
          {
            "id": "expand-title",
            "type": "text",
            "label": "Title",
            "default": "Lorem Ipsum dolor set"
          }
        ]
      },
      {
        "type": "card-cta",
        "name": "Call to Action Card",
        "settings": [
          {
            "id": "cta-title",
            "type": "text",
            "label": "Title",
            "default": "Get your child's first DIY computer!"
          },
          {
            "id": "cta-product",
            "type": "text",
            "label": "Product Handle",
            "default": "piper-computer-kit"
          },
          {
            "id": "cta-variant",
            "type": "text",
            "label": "Product Variant (Array Index)",
            "default":"0"
          },
          {
            "id": "cta-desc",
            "type": "textarea",
            "label": "Product Description",
            "default": "Build a full computer and control the virtual game world by building and programming electronics!"
          }
        ]
      }
    ]
  }
{% endschema %}