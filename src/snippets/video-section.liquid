<div class="video-section"
    {% if block.settings.video-section-background %}
        style="background-image: url({{ block.settings.video-section-background | img_url: '1200x' }});"
    {% endif %}
>
    <div class="overlay {{ block.settings.video-color }}">
        <div class="content">
            <h1>{{ block.settings.video-title }}</h1>
            <div class="video-responsive" >
                {{ block.settings.video-embed-code }}
            </div>
            <p>{{ block.settings.video-desc }}</p>
        </div>
    </div>
        
</div>