<div class="features-small" id="section-{{ block.settings.features-small-anchor }}">
    <h1 class="{{ block.settings.features-small-header-color }}">{{ block.settings.features-small-title }}</h1>
    <div class="content">

        <div class="feature">
            <div class="image">
                <img src="{{ block.settings.features-small-img-1 | img_url: '400x' }}" />
            </div>
            <div class="description">{{ block.settings.features-small-desc-1 }}</div>  
        </div>

        <div class="feature">
            <div class="image">
                <img src="{{ block.settings.features-small-img-2 | img_url: '400x' }}" />
            </div>
            <div class="description">{{ block.settings.features-small-desc-2 }}</div>
        </div>

        <div class="feature">
            <div class="image">
                <img src="{{ block.settings.features-small-img-3 | img_url: '400x' }}" />
            </div>
            <div class="description">{{ block.settings.features-small-desc-3 }}</div>
        </div>

    </div>
</div>
