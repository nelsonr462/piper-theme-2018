<div class="banner-email-signup" 
    {% if block.settings.banner-email-signup-background %}
        style="background-image: url({{ block.settings.banner-email-signup-background | img_url: '1200x' }});"
    {% endif %}
>
    <div class="content">
        <h1>{{ block.settings.banner-email-signup-callout }}</h1>

        <h3>{{ block.settings.banner-email-signup-detail }}</h3>

        <p>{{ block.settings.banner-email-signup-note }}</p>

        <div data-id="mc_embed_signup" data-component=".banner-email-signup">
            <form action="https://playpiper.us10.list-manage.com/subscribe/post?u=74efc78f5ca464657a150638f&amp;id=60b0eb1bf1"
                method="post"
                id="mc-embedded-subscribe-form"
                name="mc-embedded-subscribe-form"
                class="validate"
                target="_blank"
                novalidate
            >
                <div data-id="mc_embed_signup_scroll">
                
                    <div class="input-group">
                        <input type="email" value="" name="EMAIL" class="form-input input" data-id="mce-EMAIL" placeholder="email">
                    
                        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true">
                            <input type="text" name="b_74efc78f5ca464657a150638f_60b0eb1bf1" tabindex="-1" value="">
                        </div>
                        
                        <input type="submit" value="Subscribe" name="subscribe" data-id="mc-embedded-subscribe" class="btn orange input-group-btn">
                    </div>

                    <div id="mce-responses" class="clear">
                        <div class="response" data-id="mce-response"></div>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>