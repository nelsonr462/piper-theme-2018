<div class="quote-tool">
    
    <div class="content">
        <h1>Quote Calculator</h1>
        <div class="input">
            <p class="form">I need <input id="kitInput" type="number" min="1" max="9999" value="3"> Piper Computer Kits</p>
            <p class="note">*Recommended 2 students per Piper Computer Kit</p>
        </div>

        <div class="output">
            <h4>Your special price</h4>
            <div class="price">
                <h1 id="total">$0<sup>00</sup></h1>
                <h2 id="compare"><strike>$0.<sup>00</sup></strike></h2>
                <p>You save <span id="savings">$0.<sup>00</sup></span></p>
            </div>
        </div>

        <div class="detail">
            <h3>Your customized order includes:</h3>

            <ul>
                <li class="result" data-item-name="Piper Computer Kit">
                    <strong><span class="amount">3</span></strong> Piper Computer Kits<i class="icon icon-check"></i>
                </li>

                <li class="result" data-item-name="Spare Parts Kit">
                    <strong><span class="amount">1</span></strong> Spare Parts Kits<i class="icon icon-check"></i>
                </li>

                <li class="result" data-item-name="Lesson Plans">
                    <strong>12</strong> Lesson Plans<i class="icon icon-check"></i>
                </li>

                <li class="result" data-item-name="10-Port Battery Charger">
                    <strong><span class="amount">0</span></strong> 10-Port Battery Charger<i class="icon icon-cross"></i>
                </li>

                <li class="result">
                    <strong>1 Hour</strong> Professional Development<i class="icon icon-cross"></i>
                </li>

                <li class="result">
                    <strong>STEM</strong> Lesson Integration<i class="icon icon-cross"></i>
                </li>

                <li class="result">
                    <strong>Premium</strong> Support<i class="icon icon-cross"></i>
                </li>

            </ul>

            <button id="createInvoice" class="btn btn-lg orange">Create Invoice</button>
        </div>

    </div>

    <div class="modal" id="invoice-modal">
        <a href="#close-modal" class="modal-overlay" aria-label="Close"></a>
        <div class="modal-container">
            
            <div class="modal-header">
                <a href="#close-modal" class="btn btn-clear float-right" aria-label="Close"></a>
                <div class="modal-title h4">Invoice Form</div>
            </div>

            <div class="modal-body">
                <div class="content">
                    <h5>Please fill out the following form to generate your invoice</h5>
                    
                    <p><strong>Shipping Information</strong></p>
                    <!-- Shipping Form -->
                    <div class="form-group">
                        <label class="form-label" for="shipping-name">First and Last Name</label>
                        <input class="form-input" type="text" placeholder="First and Last name" id="shipping-name">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="shipping-company">Company</label>
                        <input class="form-input" type="text" placeholder="Company" id="shipping-company">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="shipping-name">Address</label>
                        <input class="form-input" type="text" placeholder="Name" id="shipping-name">
                    </div>
                </div>    
            </div>

            <div class="modal-footer">
                <button id="downloadInvoice" class="btn btn-lg orange">Download Invoice (PDF)</button>
            </div>

        </div>
    </div>
</div>