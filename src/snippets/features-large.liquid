<div class="features-large" id="section-{{ block.settings.features-large-anchor }}">
    <h1>{{ block.settings.features-large-title }}</h1>

    {% for i in (1..3) %}
        {% assign feature_name = "features-large-name-" | append: forloop.index %}
        {% assign feature_desc = "features-large-desc-" | append: forloop.index %}
        {% assign feature_link = "features-large-link-" | append: forloop.index %}
        {% assign feature_img = "features-large-img-" | append: forloop.index %}
        {% assign feature_decoration = "features-large-decoration-" | append: forloop.index %}

        {% if block.settings[feature_name] != "" %}
            <div class="feature">
                <div class="content">
                    <h2>{{ block.settings[feature_name] }}</h2>
                    <p>{{ block.settings[feature_desc] }}</p>

                    {% if block.settings[feature_link] %}
                        <a href="#">
                            <button class="btn btn-lg">Learn More</button>
                        </a>
                    {% endif %}

                </div>

                <div class="image" style="background: center no-repeat url({{ block.settings[feature_img] | img_url: '700x' }}); background-size: cover; ">
                {% if block.settings[feature_decoration]  %}
                    <img class="decoration" src="{{ block.settings[feature_decoration] | img_url: '200x' }}" alt="">
                {% endif %}
                </div>
            </div>
        {% endif %}

        {% assign feature_name = nil %}
        {% assign feature_desc = nil %}
        {% assign feature_img = nil %}
        {% assign feature_decoration = nil %}

    {% endfor %}

</div>