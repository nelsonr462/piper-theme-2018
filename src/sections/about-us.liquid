<div data-section-id="{{ section.id }}">
    {% for block in section.blocks %}
        <div {{ block.shopify_attributes }}>
            {% case block.type %}

              {% when 'page-hero-about' %}
              {% include 'page-hero-about' %}

              {% when 'full-size-image' %}
              {% include 'full-size-image' %}

              {% when 'mission-statement' %}
              {% include 'mission-statement' %}

              {% when 'features-large' %}
              {% include 'features-large' %}

              {% when 'paragraph-section' %}
              {% include 'paragraph-section' %}

          {% endcase %}
        </div>
    {% endfor %}
</div>

{% schema %}
  {
    "blocks": [
      
      {
        "type": "page-hero-about",
        "name": "About Page Hero",
        "settings": [
          {
            "id": "page-hero-about-background",
            "type": "image_picker",
            "label": "Background Image"
          },
          {
            "id": "page-hero-about-nav-links",
            "type": "textarea",
            "label": "Nav Links (Sections)",
            "placeholder": "How it Works, Features, What's in the Box"
          }
        ]
      },
      {
        "type": "full-size-image",
        "name": "Full Size Image",
        "settings": [
          {
            "id": "full-size-image-title",
            "type": "text",
            "label": "Image Title",
            "default": "What's in the box?"
          },
          {
            "id": "full-size-image-color-variant",
            "type": "select",
            "label": "Color Variant",
            "options": [
              { "value": "", "label": "Blue Header"},
              { "value": "purple", "label": "Purple Header"},
              { "value": "gray", "label": "Gray Header"}
            ],
            "default": ""
          },
          {
            "id": "full-size-image-img",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "full-size-image-anchor",
            "type": "text",
            "label": "Anchor (for hero nav links)"
          }
        ]
      },
      {
        "type": "mission-statement",
        "name": "Mission Statement",
        "settings": [
          {
            "id": "mission-statement-title",
            "type": "text",
            "label": "Title",
            "placeholder": "Inspiring the Inventors of Tomorrow",
            "default": "Inspiring the Inventors of Tomorrow"
          },
          {
            "id": "mission-statement-copy",
            "type": "textarea",
            "label": "Statement Copy",
            "placeholder": "Today's kids grow up with 'black box' phones..."
          },
          {
            "id": "mission-statement-signatures",
            "type": "image_picker",
            "label": "Signatures"
          },
          {
            "id": "mission-statement-anchor",
            "type": "text",
            "label": "Anchor (for hero nav links)"
          }
        ]
      },
      {
        "type": "features-large",
        "name": "Large Features Section",
        "settings": [
          {
            "id": "features-large-title-color",
            "type": "select",
            "label": "Title Color",
            "default": "",
            "options": [
              { "value": "", "label": "Blue" },
              { "value": "purple", "label": "Purple" },
              { "value": "gray", "label": "Gray" }
            ]
          },
          {
            "id": "features-large-anchor",
            "type": "text",
            "label": "Anchor (for hero nav links)"
          },
          {
            "id": "features-large-title",
            "type": "text",
            "label": "Title",
            "default": "How It Works"
          },
          {
            "id": "features-large-profiles",
            "type": "checkbox",
            "label": "Profiles",
            "default": false,
            "info": "Use when smaller images are necessary (such as profiles)."
          },
          {
            "id": "features-large-name-1",
            "type": "text",
            "label": "Feature 1 Name",
            "placeholder": "Piperstory"
          },
          {
            "id": "features-large-img-1",
            "type": "image_picker",
            "label": "Feature 1 Image"
          },
          {
            "id": "features-large-decoration-1",
            "type": "image_picker",
            "label": "Feature 1 Decoration"
          },
          {
            "id": "features-large-desc-1",
            "type": "textarea",
            "label": "Feature Description 1",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad"
          },
          {
            "id": "features-large-link-1",
            "type": "url",
            "label": "Feature Link 1"
          },
          {
            "id": "features-large-name-2",
            "type": "text",
            "label": "Feature 2 Name",
            "placeholder": "Piperstory"
          },
          {
            "id": "features-large-img-2",
            "type": "image_picker",
            "label": "Feature 2 Image"
          },
          {
            "id": "features-large-decoration-2",
            "type": "image_picker",
            "label": "Feature 2 Decoration"
          },
          {
            "id": "features-large-desc-2",
            "type": "textarea",
            "label": "Feature Description 2",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad"
          },
          {
            "id": "features-large-link-2",
            "type": "url",
            "label": "Feature Link 2"
          },
          {
            "id": "features-large-name-3",
            "type": "text",
            "label": "Feature 3 Name",
            "placeholder": "Piperstory"
          },
          {
            "id": "features-large-img-3",
            "type": "image_picker",
            "label": "Feature 3 Image"
          },
          {
            "id": "features-large-decoration-3",
            "type": "image_picker",
            "label": "Feature 3 Decoration"
          },
          {
            "id": "features-large-desc-3",
            "type": "textarea",
            "label": "Feature Description 3",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad"
          },
          {
            "id": "features-large-link-3",
            "type": "url",
            "label": "Feature Link 3"
          }
        ]
      },
      {
        "type": "paragraph-section",
        "name": "Paragraph Section",
        "settings": [
          {
            "id": "paragraph-section-header",
            "type": "text",
            "label": "Section Header",
            "placeholder": "Our Story"
          },
          {
            "id": "paragraph-section-content",
            "type": "textarea",
            "label": "Section Content",
            "placeholder": "Headquartered in San Francisco CA Piper..."
          },
          {
            "id": "paragraph-section-size",
            "type": "select",
            "label": "Content Size",
            "default": "small",
            "options": [
              { "label": "Small", "value": "small"},
              { "label": "Large", "value": "large"}
            ]
          },
          {
            "id": "paragraph-section-anchor",
            "type": "text",
            "label": "Anchor (for hero nav links)"
          }
        ]
      }
    ]
  }
{% endschema %}