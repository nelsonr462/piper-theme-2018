<div class="card-cta">
    <div class="content">
        {% comment %} <h2>{{ block.settings.cta-title }}</h2>
        <div class="divider"></div> {% endcomment %}

        
        {% assign item = all_products[ block.settings.cta-product ] %}
        {% if item.variants.size > 1 %}
            {% assign variant_id = block.settings.cta-variant | plus: 0 %}
            {% assign variant = item.variants[ variant_id ] %}
        {% endif %}

        {% if variant %}
            {% assign item = variant %}
        {% endif %}

        <div class="product">
            <div class="info">
                <h3>{{ item.title }}</h3>
                <h3 class="price">
                    {% if block.settings.cta-compare %}
                        <strike>{{ item.compare_at_price | money }}</strike>
                    {% endif %}
                    {{ item.price | money | prepend: ' '}}</h3>
                <p>{{ block.settings.cta-desc }}</p>

                <form method="post" action="/cart/add">
                    <input type="hidden" name="id" value="{{ item.id }}" />
                    <input type="submit" value="{{ block.settings.cta-button }}" class="btn btn-primary btn-lg" {% unless item.available %}disabled="true"{% endunless %}/>
                </form>
            </div>


            <div class="image">
                <img src="{{ item | img_url: '500x' }}" alt="">
            </div>

        </div>
    </div>
</div>